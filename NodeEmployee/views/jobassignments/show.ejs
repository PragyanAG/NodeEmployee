	<script type="text/javascript">

 
 jQuery( document ).ready(function( $ ) {
  
  
    if('<%=jobassignment.vesselschedule%>' == 'completed'){
 
       
	  $('#edit12').addClass('disabled');
	  $('#btncancel').addClass('disabled');
	  $(':input[type="submit"]').prop('disabled', true);
      }
  
  if('<%=jobassignment.vesselschedule%>' == 'cancelled'){
 
      document.getElementById('btncancel').value="Active JOB";
	  $('#edit12').addClass('disabled');
	  $(':input[type="submit"]').prop('disabled', true);
      }
  
     var dt1 = '<%= jobassignment.departure %>';
	 d1 = new Date(dt1);
	
	 $('#departure').val($.datepicker.formatDate('yy-mm-dd', d1));
	  
	 var dt2 = '<%= jobassignment.arrival %>';
	 d2 = new Date(dt2);
	 $('#arrival').val($.datepicker.formatDate('yy-mm-dd', d2));
	 
	 var dt3 = '<%= jobassignment.bfromdt %>';
	 d3 = new Date(dt3);
	 $('#bfromdt').val($.datepicker.formatDate('yy-mm-dd', d3));
	 
	 var dt4 = '<%= jobassignment.btodt %>';
	 d4 = new Date(dt4);
	 $('#btodt').val($.datepicker.formatDate('yy-mm-dd', d4));
	 
	 var dt5 = '<%= jobassignment.rtcomp %>';
	 d5 = new Date(dt5);
	 $('#rtcomp').val($.datepicker.formatDate('yy-mm-dd', d5));
	 
	 var dt6 = '<%= jobassignment.rtdeliver %>';
	 d6 = new Date(dt6);
	 $('#rtdeliver').val($.datepicker.formatDate('yy-mm-dd', d6));
	 
	 var dt7 = '<%= jobassignment.dtdue %>';
	 d7 = new Date(dt7);
	 $('#dtdue').val($.datepicker.formatDate('yy-mm-dd', d7));
	 
	 $('#remarks').val('<%= jobassignment.remarks %>');
  
  if('<%=jobassignment.vesselschedule%>' != null )
       {
	   
           if('<%=jobassignment.vesselschedule%>' == 'planned'){
              document.getElementById('contactChoice1').checked=true;
			 
             }
          else if('<%=jobassignment.vesselschedule%>' == 'onboard')
           {
             document.getElementById('contactChoice2').checked=true;
		   }
		   else if('<%=jobassignment.vesselschedule%>' == 'onhold')
		   {
		   document.getElementById('contactChoice3').checked=true;
		   }
       }
});


$("#btncancel").click(function (event) {
		 var check = confirm('Are you sure want to do this?');
			 if (check == true) {
			 var itemid = '<%= jobassignment._id%>';
			   $.ajax({
				type: "POST",
				url: "/jobassignments/cancel/" + itemid,
				data: {},
				processData: false,
				contentType: false,
				cache: false,
				timeout: 600000,
				success: function(){
				         window.location.href = "/jobassignments";
						 },
				error: function (e) {

					   console.log("ERROR : ", e);
				}
			});
			 
			 }
			 else{
			   return false;
			 }
		});


</script>							
